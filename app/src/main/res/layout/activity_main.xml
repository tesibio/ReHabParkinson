<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Título fijo en la parte superior -->
    <TextView
        android:id="@+id/tvInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/inicio"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto "Terapias asignadas" -->
    <TextView
        android:id="@+id/tvTerapiasAsignadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terapias_asignadas"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Menú de opciones"
        android:src="@android:drawable/ic_dialog_dialer"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck"
        tools:visibility="visible" />

    <!-- ScrollView para las tarjetas -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTerapiasAsignadas"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta 1: Columna cervical -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CC01"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ima_cc01"
                        app:srcCompat="@drawable/ima_cc01"
                        android:contentDescription="@string/contentdesc_CC01"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/desc_DESCRIPCION_GENERAL_TITULO"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:justificationMode="inter_word"
                        android:text="@string/desc_CC01"
                        android:textAlignment="viewStart"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btnCervical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/brown"
                        android:text="@string/realizar"
                        android:textColor="@color/white"
                        android:contentDescription="Botón para iniciar ejercicio cervical" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 2: CC02 Inclinación lateral derecha -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CC02"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_cc02"
                        app:srcCompat="@drawable/ima_cc02"
                        android:contentDescription="@string/contentdesc_CC02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_DESCRIPCION_GENERAL_TITULO"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_CC02"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="viewStart"
                        android:justificationMode="inter_word" />

                    <Button
                        android:id="@+id/btnLumbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realizar"
                        android:backgroundTint="@color/brown"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:contentDescription="Botón para iniciar ejercicio lumbar" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 3: CL01 Inclinación lateral derecha -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CL01"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ima_cl01"
                        app:srcCompat="@drawable/ima_cl01"
                        android:contentDescription="@string/contentdesc_CL01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/desc_DESCRIPCION_GENERAL_TITULO"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:justificationMode="inter_word"
                        android:text="@string/desc_CL01"
                        android:textAlignment="viewStart"
                        android:textSize="12sp" />

                    <!-- Falta corregir boton a terapia -->
                    <Button
                        android:id="@+id/btnterapia_cl01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/brown"
                        android:text="@string/realizar"
                        android:textColor="@color/white"
                        android:contentDescription="Botón para iniciar ejercicio cervical" />
                    <!-- corrigiendo-->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Tarjeta 4: EC03 Mano al oído contralateral -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EC03"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_ec03"
                        app:srcCompat="@drawable/ima_ec03"
                        android:contentDescription="@string/contentdesc_EC03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_DESCRIPCION_GENERAL_TITULO"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_EC03"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="viewStart"
                        android:justificationMode="inter_word" />

                    <Button
                       android:id="@+id/btnterapia_ec03"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/realizar"
                       android:backgroundTint="@color/brown"
                       android:textColor="@color/white"
                       android:layout_gravity="end"
                       android:contentDescription="Botón para iniciar ejercicio lumbar" />

               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 5: EC05 Elevación del brazo derecho y separación del brazo izquierdo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EC05"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ima_ec05"
                        app:srcCompat="@drawable/ima_ec05"
                        android:contentDescription="@string/contentdesc_EC05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_DESCRIPCION_GENERAL_TITULO"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc_EC05"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="viewStart"
                        android:justificationMode="inter_word" />

                    <Button
                        android:id="@+id/btnterapia_ec05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/realizar"
                        android:backgroundTint="@color/brown"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:contentDescription="Botón para iniciar ejercicio lumbar" />
                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
   </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

