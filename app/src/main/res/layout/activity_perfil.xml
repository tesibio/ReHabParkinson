<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8fafc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Tarjeta de perfil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/brown">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp"
                tools:ignore="ExtraText">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="400dp"
                    android:layout_height="576dp"
                    android:contentDescription="@string/menu_opciones"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagendummy" />

                <TextView
                    android:id="@+id/tvPerfilNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Usuario"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPerfilRol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Paciente"
                    android:textColor="#49739c"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvPerfilID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="ID: 12345"
                    android:textColor="#49739c"
                    android:textSize="24sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃ³n Volver -->
        <Button
            android:id="@+id/btnVolverPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="@color/white"
            android:backgroundTint="@color/brown"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>
